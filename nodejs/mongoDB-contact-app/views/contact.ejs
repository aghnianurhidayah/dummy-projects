<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>
            <a href="/contact/add" class="btn btn-primary mt-2 mb-2">Tambah Kontak</a>
            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
            <% } %>
            <table class="table table-striped-columns">
               <thead>
                    <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">No Handphone</th>
                    <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts.length === 0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger fw-bold" role="alert">
                                    Tidak ada data.
                                </div>
                            </td>
                        </tr>
                    <% } %>
                    <% let no = 1; contacts.forEach(contact => { %>
                    <tr>
                        <th scope="row"> <%= no++ %> </th>
                        <td> <%= contact.nama %> </td>
                        <td> <%= contact.nohp %> </td>
                        <td>
                            <a class="btn btn-success" href="/contact/<%= contact.nama %>">Detail</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
